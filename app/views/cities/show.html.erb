<%#= render "shared/banner_cities_show" %>
<div class="container-fluid m-0 p-0">
  <div class="country-banner d-flex align-items-center justify-content-center" style="height: 196px;margin-top: -60px;background: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@city.image%>);background-position: center bottom;background-size: cover;">
    <div class="country-name h1 mt-3"><%= @city.name.upcase %></div>
  </div>
</div>
<div class="container-fluid pt-3 pb-5 px-0 m-0">
  <div class="d-flex justify-content-end align-items-center px-3">
    <%= link_to "Back to itinerary", itinerary_path(params[:itinerary]), class: "text-dark"%>
  </div>
  <div class="container-fluid m-0 px-0">
    <div class="d-flex justify-content-between align-items-center px-3">
      <div class="h3">Top restaurants</div>
    </div>
    <div class="row m-0">
      <% @restaurants.each do |restaurant| %>
        <div class="col-3 m-0 p-0">
          <div class="city-card m-3 p-0">
            <p class="card-price"><%= restaurant.range %></p>
            <div class="image">
              <%= image_tag restaurant.image %>
            </div>
            <div class="text p-3">
              <div class="fabbutton">&#43;</div>
              <h3 class="card-title"><%= restaurant.title %></h3>
              <p class="card-address"><%= restaurant.address %></p>
              <p class="card-description"><%= restaurant.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-between align-items-center px-3">
      <div class="h3">Top Activities</div>
    </div>
    <div class="row m-0">
      <% @activities.each do |activity| %>
        <div class="col-3 m-0 p-3">
          <div class="city-card m-0 p-0">
            <p class="card-price"> $<%= activity.price %></p>
            <div class="image">
              <%= image_tag activity.image %>
            </div>
            <div class="text p-3">
              <div class="fabbutton">&#43;</div>
              <h3 class="card-title"><%= activity.title %></h3>
              <div class="d-flex justify-content-between pt-2">
                <p class="card-description"><%= activity.description %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-between align-items-center px-3">
      <div class="h3">Top Hotels</div>
    </div>
    <div class="row m-0">
      <% @hotels.each do |hotel| %>
        <div class="col-3 m-0 p-3">
          <div class="city-card m-0 p-0">
            <p class="card-price">$<%= hotel.price %></p>
            <div class="image">
              <%= image_tag hotel.image %>
            </div>
            <div class="text p-3">
              <div class="fabbutton">&#43;</div>
                <h3 class="card-title"><%= hotel.title %></h3>
                <p class="card-address"><%= hotel.address %></p>
                <div class="d-flex justify-content-between pt-2">
                <p class="card-description"><%= hotel.description %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
